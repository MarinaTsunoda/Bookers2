<div class="container">
  <div class="row">
    
    <%= render 'users/user_info', book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <table width="100%">
        <tr class="border-top">
          <th width="20%" class="p-2"></th>
          <th width="30%" class="p-2">Title</th>
          <th width="50%" class="p-2">Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr class="border-top">
          <td  class="p-2"><%= image_tag book.get_image(80,80) %></td>
          <td class="p-2 align-text-top">
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td class="p-2 align-text-top"><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>