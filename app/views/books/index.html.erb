<div class="container">
  <div class="row">
    
    <%= render 'users/user_info', book: @book %>
    
    <div class="col-md-9">
      <h2>Books</h2>
      <table>
        <tr>
          <th> </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.image %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>