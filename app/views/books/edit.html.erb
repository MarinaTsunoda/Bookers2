<div class="container"></div>
  <div class="row"></div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-4">Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
        <label class="mt-4">Title</label><br>
        <%= f.text_field :title, class:'w-100' %><br>
        <label class="mt-4">Opinion</label><br>
        <%= f.text_area :body, class:'w-100' %><br>
        <%= f.submit 'Update Book', class:'btn btn-success my-3' %>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>