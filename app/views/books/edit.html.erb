<div class="container"></div>
  <div class="row"></div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"></div>
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book' %>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>