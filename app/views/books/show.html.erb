<div class="container">
  <div class="row">
    
    <%= render 'users/user_info', book: @book %>
    
    <div class="col-md-9">
      <h2>Book detail</h2>
      <hr noshade>
      <%= image_tag @book.get_image %>
      <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
      <% end %>
      <%= @book.body %>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-default' %>
        <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか?" class: 'btn btn-default' %>
      <% end %>
      <%= link_to user_path(@book.user_id) do %>
        <%= @book.user.name %>
      <% end %>
    </div>
  </div>
</div>