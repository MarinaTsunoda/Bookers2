<div class="container mt-3 mb-5">
  <div class="row">

    <%= render 'users/user_info', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <br>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.get_image %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>