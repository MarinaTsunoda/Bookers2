<div class="container">
  <div class="row p-4">

    <%= render 'users/user_info', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table width="100%">
        <tr class="border-top">
          <th></th>
          <th class="p-2">Title</th>
          <th class="p-2">Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr class="border-top">
            <td width="20%" class="p-2"><%= image_tag book.get_image(80,80) %></td>
            <td width="30%" class="p-2 align-text-top">
              <%= link_to book_path(book.id) do %>
                <%= book.title %></td>
              <% end %>
            <td width="50%" class="p-2 align-text-top"><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>