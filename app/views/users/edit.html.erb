<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto my-3 mb-5">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name, class:'mb-3 w-100' %><br>
        <label>Image</label><br>
        <%= f.file_field :image, accept:"image/*", class:'mb-3' %><br>
        <label>Introduction</label><br>
        <%= f.text_area :introduction, class:'mb-3 w-100' %><br>
        <%= f.submit 'Update User', class:'border-0 bg-secondary text-light rounded py-1 px-2' %>
      <% end %>
    </div>
  </div>
</div>