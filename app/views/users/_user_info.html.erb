<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag current_user.image %>
  <table>
    <tr class="py-3 border-top">
      <th>name</th>
      <td class=" text-center"><%= current_user.name %></td>
    </tr>
    <tr class="py-3 border-top">
      <th>introduction</th>
      <td class=" text-center"><%= current_user.introduction %></td>
    </tr>
  </table>
  <%= link_to edit_user_path, class: 'btn btn-default' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  
  <h2>New book</h2>
  <%= form_with model: book, url: books_path, method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book', class:'bg-success' %>
  <% end %>
</div>